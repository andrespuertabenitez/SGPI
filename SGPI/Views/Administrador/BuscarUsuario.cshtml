@model SGPI.Models.Usuario

@{
    ViewData["Title"] = "BuscarUsuario";
    Layout = "_LayoutSGPI";
}
<h1>Buscar</h1>

<nav class="navbar navbar-expand-sm bg-light">

            <form class="col-lg-10 offset-lg-4">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="/Administrador/CrearUsuario">Crear Usuario</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Administrador/EditarUsuario">editar usuario</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Administrador/BuscarUsuario">Buscar Usuario</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Administrador/Reportes">Reportes</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Administrador/EliminarUsuario">eliminar usuario</a>
            </li>
                </ul>
                </form>
                </nav>
<form method="post">

            
            <div class="row">
                <div class="form-group col-sm-6">
                    <label>Buscar Usuario:</label>
                    <input asp-for="Documento" type="text" class="form-control col-sm-10" placeholder="Usuario" id="pwd">
                </div>

                <div class="form-group col-sm-0">
                    <br>
                    <button type="submit" class="btn btn-primary">Buscar</button>
                </div>
            </div>

            <div class="container">

                @if (Model != null)
                {
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model=>model.Documento)</th>
                                <th>@Html.DisplayNameFor(model=>model.Nombre)</th>
                                <th>@Html.DisplayNameFor(model=>model.Apellido)</th>
                                <th>@Html.DisplayNameFor(model=>model.Email)</th>
                                
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>@Html.DisplayFor(modelitem=>modelitem.Documento)</td>
                                <td>@Html.DisplayFor(modelitem=>modelitem.Nombre)</td>
                                <td>@Html.DisplayFor(modelitem=>modelitem.Apellido)</td>
                                <td>@Html.DisplayFor(modelitem=>modelitem.Email)</td>
                                
                                <td>@Html.ActionLink("EditarUsuario", "EditarUsuario", new {IdUsuario = Model.IdUsuario})</td>
                                <td>@Html.ActionLink("EliminarUsuario", "EliminarUsuario", new {IdUsuario = Model.IdUsuario}, new {onclick="return confirm ('¿Esta seguro de eliminarlo?');"})</td>
                            </tr>
                        </tbody>
                    </table>
                }

                <div>
                    @if (ViewBag.mensaje != null)
                    {
                        <div class="alert alert-success" role="alert">
                            @ViewBag.mensaje
                        </div>
                    }

                </div>
           
            </div>

        </form>

